    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/partially_transparent_black"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="@string/view_result_instructions_two_fingers"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="@string/view_result_instructions_three_fingers"

        />
</LinearLayout>